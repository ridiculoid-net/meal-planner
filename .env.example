# Example environment variables

# Base URL of your deployed application
NEXTAUTH_URL=http://localhost:3000

# NextAuth secret (generate a random string)
NEXTAUTH_SECRET=changeme

# Google OAuth credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Database connection string (Supabase)
DATABASE_URL=postgresql://postgres:password@localhost:5432/recipe_db

# Supabase public configuration
NEXT_PUBLIC_SUPABASE_URL=https://project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=public-anon-key

# Secret for recipe ingestion cron endpoint
CRON_SECRET=super-secret-token